# for link-local connections
Host 169.254.0.*
    # don't require user to okay remote's fingerprint on first connect
    StrictHostKeyChecking no
    # don't cache remote hosts' keys
    UserKnownHostsFile=/dev/null
    # don't warn me about it
    LogLevel=ERROR
